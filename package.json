{
  "name": "telegram-postback-bot",
  "version": "1.0.0",
  "description": "Telegram bot for tracking PropellerAds conversions and sending postbacks",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "nodemon bot.js",
    "test": "node test-bot.js",
    "setup": "./setup.sh",
    "deploy": "./deploy.sh",
    "docker:build": "docker build -t telegram-postback-bot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env telegram-postback-bot",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "logs": "tail -f combined.log",
    "health": "curl -s http://localhost:3000/health | jq .",
    "monitor": "node monitor.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.64.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": ["telegram", "bot", "propellerads", "postback", "tracking"],
  "author": "",
  "license": "MIT"
}
